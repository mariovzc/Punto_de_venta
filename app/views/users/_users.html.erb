<div class="row">
  <div class="col-xs-12">              
    <div class="box">
      <div class="box-header text-center">
        <h3 class="box-title">Lista de Articulos</h3>
      </div><!-- /.box-header -->
      <div class="box-body">
        <table id="example1" class="table table-bordered table-striped">
          <thead>
            <tr>
              <th>Nombre</th>
              <th>Correo</th>
              <th>Direccion</th>
              <th>Telefono</th>
              <th>Sexo</th>
              <th>Observaciones</th>
            </tr>
          </thead>
          <% @users.each do |user| %>
            <tbody>
              <tr>
                <td><%= user.nombres %></td>
                <td><%= user.email %></td>
                <td><%= user.direccion %></td>
                <td><%= user.telefono %></td>
                <td><%= user.sexo == true ? 'Masculino' : user.sexo == false ? 'Femenino' : '' %></td>
                <td><%=user.observacion%></td>                                
                <td>
                  <button type='button' id='edit-user-<%=user.id%>'class='btn btn-social-icon btn-tumblr edit-users' data-toggle="modal" data-target="#edit-details"> <span class='fa fa-pencil-square-o'></span> </button>
                  <%= button_to  user_path(user), method: :delete, data: { confirm: 'Are you sure?' }, :remote => true, class: 'btn btn-social-icon btn-tumblr borrar_usuario' do  %>
                    <i class= "fa fa-trash fa-2x"></i>
                  <%end%>
                </td>
              </tr>           
            </tbody>
          <% end %>
          <%= will_paginate @users, previous_label: "Anterior", next_label: "Siguiente", class: 'flickr_pagination pull-right '%>                       
        </table>
      </div><!-- /.box-body -->
    </div><!-- /.box -->
  </div><!-- /.col -->
</div><!-- /.row -->