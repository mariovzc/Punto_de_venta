<%content_for :stylesheet do%>
  <%=stylesheet_link_tag "app"%>
<%end%>
<%= render 'menu/menu'%>
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
  <section class="content-header">
    <ol class="breadcrumb" id="miniguia">
      <li>
        <%= link_to "<i class='fa fa-users'></i> Usuarios".html_safe, :users, id:'submenu' %>
      </li>
      <li class="active" id="submenu2">Index</li>
    </ol>
  </section>
    <!-- Main content -->
  <section class="content">
  <% flash.each do |name, msg| %>
 <div class="alert alert-success alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
     <h4>  <i class="icon fa fa-check"></i><%= msg %></h4>
  </div>
  <% end %>
  	<button id="btn-nuevo" type="button" class="btn btn-app" data-toggle="modal" data-target="#add-detail"><i class='fa fa-user'></i> Nuevo Usuario</button>
  <%= render 'users'%>  
  </section><!-- /.content -->
</div><!-- /.content-wrapper -->
<%= render 'menu/footer'%>
<% content_for :javascript do %>
  <%=javascript_include_tag "jquery.validate.min.js"%>
  <%=javascript_include_tag "users"%>
<%end%>
<div id="add-detail" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Agregar Usuario</h4>
      </div>
      <div class="modal-body">
      <%= form_for(@user) do |f| %>      	
        <div class="row">
        	<div class="col-md-6">
        		<div class="form-group">
		          <label for="inputPassword3" class="control-label">Nombres*</label>
		          <div class="">
		          	<%=f.text_field :nombres, placeholder: 'Digite el Nombre Completo', class: 'form-control'%>
		          </div>
		        </div>
		        <div class="form-group">
		          <label for="inputPassword3" class="control-label">Direccion</label>
		          <div class="">
		          	<%=f.text_field :direccion, placeholder: 'Digite la Direccion del Usuario', class: 'form-control'%>
		          </div>
		        </div>
		        <div class="form-group">
		          <label for="inputPassword3" class="control-label">Telefono</label>
		          <div class="">
		          	<%=f.text_field :telefono, placeholder: 'Digite El Telefono del Usuario', class: 'form-control'%>
		          </div>
		        </div>
        	</div>
        	<div class="col-md-6">
        		<div class="form-group">
		          <label for="inputPassword3" class="control-label">Email*</label>
		          <div class="">
		          	<%=f.text_field :email, placeholder: 'Digite el Correo del Usuario', class: 'form-control'%>
		          </div>
		        </div>
		        <div class="form-group">
		          <label for="inputPassword3" class="control-label">Sexo</label>
		          <div class="text-center">
		          	<fieldset>
		          		<%=radio_button("user", "sexo", true)%>
		          		<small>Masculino</small>
		          		<%=radio_button("user", "sexo", false)%>
		          		<small>Femenino</small>
		          	</fieldset>
		          </div>
		        </div>
		        <div class="form-group">
		          <label for="inputPassword3" class="control-label">Observaciones</label>
		          <div class="">
		          	<%=f.text_area :observacion, placeholder: 'Digite Observaciones sobre el usuario', class: 'form-control'%>
		          </div>
		        </div>
        	</div>
        </div>
      </div>
      <div class="modal-footer">
          <%= f.submit 'Agregar', class: 'btn btn-default' %>
      <% end %>
        <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
      </div>
    </div>
  </div>
</div>
<div id="edit-details" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Editar Usuario</h4>
      </div>
      <div class="modal-body">
      <%#= form_for @sale_detail, format: :json, remote: true, method: :put, html: {id: 'edit_sale_detail', class: 'edit_sale_detail'} do |f| %>
      <%= form_for @user, format: :json, method: :put, html: {id: 'edit_user', class: 'edit_user'} do |f| %>       
        <div class="row">
          <div class="col-md-6">
            <div class="form-group">
              <label for="inputPassword3" class="control-label">Nombres*</label>
              <div class="">
                <%=f.text_field :nombres, placeholder: 'Digite el Nombre Completo', class: 'form-control', id: 'edit_nombre'%>
              </div>
            </div>
            <div class="form-group">
              <label for="inputPassword3" class="control-label">Direccion</label>
              <div class="">
                <%=f.text_field :direccion, placeholder: 'Digite la Direccion del Usuario', class: 'form-control', id: 'edit_direccion'%>
              </div>
            </div>
            <div class="form-group">
              <label for="inputPassword3" class="control-label">Telefono</label>
              <div class="">
                <%=f.number_field :telefono, placeholder: 'Digite El Telefono del Usuario', class: 'form-control', id: 'edit_telefono'%>
              </div>
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <label for="inputPassword3" class="control-label">Email*</label>
              <div class="">
                <%=f.text_field :email, placeholder: 'Digite el Correo del Usuario', class: 'form-control', id: 'edit_email'%>
              </div>
            </div>
            <div class="form-group">
              <label for="inputPassword3" class="control-label">Sexo</label>
              <div class="text-center">
                <fieldset>
                  <%=radio_button("user", "sexo", true, :id => 'edit_check_true')%>
                  <small>Masculino</small>
                  <%=radio_button("user", "sexo", false, :id => 'edit_check_false')%>
                  <small>Femenino</small>
                </fieldset>
              </div>
            </div>
            <div class="form-group">
              <label for="inputPassword3" class="control-label">Observaciones</label>
              <div class="">
                <%=f.text_area :observacion, placeholder: 'Digite Observaciones sobre el usuario', class: 'form-control', id: 'edit_observacion'%>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
          <%= f.submit 'Agregar', class: 'btn btn-default' %>
      <% end %>
        <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
      </div>
    </div>
  </div>
</div>