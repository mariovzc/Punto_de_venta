<div class="row">
  <div class="col-xs-12">              
    <div class="box">
      <div class="box-header text-center">
        <h3 class="box-title">Lista de Clientes</h3>
      </div><!-- /.box-header -->
      <div class="box-body">
        <table id="example1" class="table table-bordered table-striped">
          <thead>
            <tr>
              <th>Cedula</th>
              <th>Nombres</th>
              <th>Direccion</th>
              <th>Telefono</th>
              <th>Correo</th>
              <th>Acciones</th>
            </tr>
          </thead>
          <% @clients.each do |client| %>
          <tbody>
            <tr>
              <td><%= client.cedula %></td>
              <td><%= client.nombres %></td>
              <td><%= client.direccion %></td>
              <td><%= client.telefono %></td>
              <td><%= client.correo %></td>
              <td><%= link_to '<i class= "fa fa-pencil fa-2x"></i>'.html_safe, edit_client_path(client), class: 'btn btn-social-icon btn-tumblr'  %>
              <%= button_to  client_path(client), method: :delete, data: { confirm: 'Are you sure?' }, :remote => true, class: 'btn btn-social-icon btn-tumblr borrar_cliente' do  %>
              <i class= "fa fa-trash fa-2x"></i>
              <%end%>    
              </td>
            </tr>           
          </tbody>
          <% end %>
          <%= will_paginate @clients, previous_label: "Anterior", next_label: "Siguiente", class: 'flickr_pagination pull-right '%>                   
        </table>
      </div><!-- /.box-body -->
    </div><!-- /.box -->
  </div><!-- /.col -->
</div><!-- /.row -->