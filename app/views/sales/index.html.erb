<%content_for :stylesheet do%>
<%=stylesheet_link_tag "app"%>
<%end%>
<%= render 'menu/menu'%>
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
  <section class="content-header">
    <ol class="breadcrumb" id="miniguia">
      <li>
        <%= link_to "<i class='fa fa-cart-plus'></i> Ventas".html_safe, :sales, id:'submenu' %>
      </li>
      <li class="active" id="submenu2">Index</li>
    </ol>
  </section>
    <!-- Main content -->
  <section class="content">
  <% flash.each do |name, msg| %>
 <div class="alert alert-success alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
     <h4>  <i class="icon fa fa-check"></i><%= msg %></h4>
  </div>
  <% end %>
  <%= link_to "<i class='fa fa-cart-plus'></i> Nueva Venta".html_safe, new_sale_path, class: 'btn btn-app', id: 'btn-nuevo'%>
  <%= render 'sales'%>  
  </section><!-- /.content -->
</div><!-- /.content-wrapper -->
<%= render 'menu/footer'%>
<% content_for :javascript do %>
  <%=javascript_include_tag "jquery.validate.min.js"%>
  <%=javascript_include_tag "sales"%>
<%end%>