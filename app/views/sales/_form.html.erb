<div class="col-md-4">
  <div class="form-group">
    <%= f.label :fecha %><br>
    <%= f.date_select :fecha%>
  </div>
  <div class="form-group">
    <%= f.label :client_id, 'Cliente' %><br>
    <%=f.select :client_id, options_from_collection_for_select(@clients, 'id', 'nombres'),{}, {class: 'form-control'} %>
  </div>
  <div class="form-group">
    <%= f.label :user_id, 'Usuario' %><br>
    <%= f.hidden_field :user_id, value: current_user.id%>
    <%=text_field_tag 'nombre', nil, value: current_user.nombres, disabled: true, class: 'form-control'%>
  </div>
</div>