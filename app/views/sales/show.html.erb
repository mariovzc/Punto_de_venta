<%content_for :stylesheet do%>
<%=stylesheet_link_tag "app"%>
<%end%>
<%= render 'menu/menu'%>
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
  <section class="content-header">
    <ol class="breadcrumb" id="miniguia">
      <li>
        <%= link_to "<i class='fa fa-cart-plus'></i> Ventas".html_safe, :sales, id:'submenu' %>
      </li>
      <li class="active" id="submenu2">Detalle</li>
    </ol>
  </section>
    <!-- Main content -->
  <section class="content">
  <% flash.each do |name, msg| %>
 <div class="alert alert-success alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
     <h4>  <i class="icon fa fa-check"></i><%= msg %></h4>
  </div>
  <% end %>

  <%= link_to "<i class='fa fa-cart-plus'></i> Detalle Venta".html_safe, new_sale_path, class: 'btn btn-app', id: 'btn-nuevo'%>
  <section class="invoice">
          <!-- title row -->
          <div class="row">
            <div class="col-xs-12">
              <h2 class="page-header">
                <i class="fa fa-globe"></i> AdminLTE, Inc.
                <small class="pull-right">Fecha: <%=(@sale.fecha).strftime("%d/%m/%Y")%></small>
              </h2>
            </div><!-- /.col -->
          </div>
          <!-- info row -->
          <div class="row invoice-info">
            <div class="col-sm-4 invoice-col text-center">
              <address>
                <strong>Cliente</strong><br>
                <%= @sale.client.cedula %><br>
                <%= @sale.client.nombres %><br>
                <%= @sale.client.direccion %><br>
                <%= @sale.client.telefono %><br>
                <%= @sale.client.correo %>
              </address>
            </div><!-- /.col -->
            <div class="col-sm-2 invoice-col text-center">
              <address>
                <strong>Vendedor</strong><br>
                <%= @sale.user.nombres %> <br>
              </address>
            </div><!-- /.col -->
            <div class="col-sm-4 invoice-col text-center">
              <b>SubTotal: </b> <%= number_to_currency(@sale.subtotal.nil? ? 0 : @sale.subtotal) %><br>
              <b>Total: </b> <%= number_to_currency(@sale.total.nil? ? 0 : @sale.total) %><br>
            </div><!-- /.col -->
          </div><!-- /.row -->

          <!-- Table row -->
          <div class="row">
            <div class="col-xs-12 table-responsive">
              <%= render 'details'%>  
            </div><!-- /.col -->
          </div><!-- /.row -->
        </section>
  </section><!-- /.content -->
</div><!-- /.content-wrapper -->
<%= render 'menu/footer'%>
<% content_for :javascript do %>
  <%=javascript_include_tag "jquery.validate.min.js"%>
  <%=javascript_include_tag "sales"%>
<%end%>