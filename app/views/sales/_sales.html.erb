<div class="row">
  <div class="col-xs-12">              
    <div class="box">
      <div class="box-header text-center">
        <h3 class="box-title">Lista de Articulos</h3>
      </div><!-- /.box-header -->
      <div class="box-body">
        <table id="example1" class="table table-bordered table-striped">
          <thead>
            <tr>
              <th>Cliente</th>
              <th>Usuario</th>
              <th>Fecha</th>
              <th>Subtotal</th>
              <th>Total</th>
              <th>Acciones</th>
            </tr>
          </thead>
          <% @sales.each do |sale| %>
            <tbody>
              <tr>
                <td><%= sale.client.nombres %></td>
                <td><%= sale.user.nombres %></td>
                <td><%= (sale.fecha).strftime("%d/%m/%Y") %></td>
                <td><%= number_to_currency(sale.subtotal.nil? ? 0 : sale.subtotal) %></td>
                <td><%= number_to_currency(sale.total.nil? ? 0 : sale.total) %></td>
                <td>
                  <%= link_to '<i class= "fa fa-eye"></i>'.html_safe, (sale),class: 'btn btn-social-icon btn-tumblr' %>
                  <%= link_to '<i class= "fa fa-pencil"></i>'.html_safe, edit_sale_path(sale),class: 'btn btn-social-icon btn-tumblr' %>
                  <%= link_to '<i class= "fa fa-file-excel-o"></i>'.html_safe, sale_path(sale, format: :xlsx),class: 'btn btn-social-icon btn-tumblr' %>
                  <%= link_to '<i class= "fa fa-file-pdf-o"></i>'.html_safe, sale_path(sale, format: :pdf),class: 'btn btn-social-icon btn-tumblr' %>
                  <%= button_to  sale_path(sale), method: :delete, data: { confirm: 'Are you sure?' }, :remote => true, class: 'btn btn-social-icon btn-tumblr borrar_venta' do  %>
                    <i class= "fa fa-trash fa-2x"></i>
                  <%end%>
                </td>
              </tr>           
            </tbody>
          <% end %>                   
        </table>
      </div><!-- /.box-body -->
    </div><!-- /.box -->
  </div><!-- /.col -->
</div><!-- /.row -->